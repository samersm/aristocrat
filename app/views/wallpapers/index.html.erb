<p id="notice"><%= notice %></p>

<div class="container center">
  <br>
  <div class="jumbotron">
    <h1>Wallpapers</h1>
    <br>
    <%= link_to 'New Wallpaper', new_wallpaper_path, :class => 'btn btn-success' %>
      <a class="btn btn-danger" href="#">
      <i class="glyphicon glyphicon-align-left"></i> Delete</a>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wallpapers.each do |wallpaper| %>
      <tr>
        <td><%= link_to 'Show', wallpaper %></td>
        <td><%= link_to 'Edit', edit_wallpaper_path(wallpaper) %></td>
        <td><%= link_to 'Destroy', wallpaper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
