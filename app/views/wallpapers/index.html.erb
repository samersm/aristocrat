<p id="notice"><%= notice %></p>

<div class="container center">
  <br>
  <div class="jumbotron">
    <h1>Wallpapers</h1>
    <br>
    <%= link_to 'New Wallpaper', new_wallpaper_path, class: 'btn btn-success' %>
    
    <%= link_to new_wallpaper_path do %>
      <button type="button" class="btn btn-success" aria-label="Left Align">
        <span class="fa fa-plus fa-lg" aria-hidden="true"></span>
      </button>
    <% end %>

      <a class="btn btn-danger" href="#">
      <i class="glyphicon glyphicon-align-left"></i> Delete</a>
    <%= button_tag type: 'submit', class: "button my-button", id: "register-button" do %>
        <i class="fa fa-lock" aria-hidden="true"></i>
    <% end %>
  </div>
    <br></br><br></br>
    <%= link_to playgrounds_mainviewdesign_path do %>
      <button type="button" class="btn btn-default">
        <i class="fa fa-lock fa-2x" aria-hidden="true"></i>
      </button>
    <% end %>
    &nbsp; &nbsp; &nbsp;
    <%= link_to playgrounds_singleviewdesign_path do %>
      <button type="button" class="btn btn-default">
        <i class="fa fa-lock fa-2x" aria-hidden="true"></i>
      </button>
    <% end %>
    &nbsp; &nbsp; &nbsp;
    <%= link_to playgrounds_navbar_path do %>
      <button type="button" class="btn btn-default">
        <i class="fa fa-lock fa-2x" aria-hidden="true"></i>
      </button>
    <% end %>
</div>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wallpapers.each do |wallpaper| %>
      <tr>
        <td><%= link_to 'Show', wallpaper %></td>
        <td><%= link_to 'Edit', edit_wallpaper_path(wallpaper) %></td>
        <td><%= link_to 'Destroy', wallpaper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
